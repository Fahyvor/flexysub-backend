generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName           String
  lastName           String
  phone               String
  email               String @unique
  password            String
  accountNumber       String?
  bankName            String?
  bankId              String?
  accountName         String?
  accountBalance      Float? @default(0)
  trackingReference   String?
  accountType         String?
  transactions        Transaction[] @relation("userTransactions")
  topUpTransactions   TopUpTransaction[] @relation("userTopUpTransactions")
}

model Transaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  amount      Float
  date        DateTime @default(now())
  description String?
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id], name: "userTransactions")
}

model TopUpTransaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  amount      Float
  date        DateTime @default(now())
  method      String
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id], name: "userTopUpTransactions")
}
